{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "vconcat": [
    {
      "width": 500,
      "height": 350,
      "title": {
        "text": "Average Income (USD) by Region Over Time"
      },
      "data": {
        "url": "../datasets/avg_income_regions.csv",
        "format": {"type": "csv"}
      },
      "transform": [{"filter": {"param": "brush"}}],
      "encoding": {
        "x": {
          "field": "Year", 
          "type": "ordinal",
          "title": "Year"
        },
        "y": {
          "field": "Average Income", 
          "type": "quantitative",
          "title": "Average Income (USD)"
        }
      },
      "layer": [
        {
          "selection": {
            "region_highlight": {
              "type": "multi",
              "fields": ["Regions"],
              "bind": "legend"
            }
          },
          "mark": {
            "type": "line",
            "strokeWidth": 2
          },
          "encoding": {
            "color": {
              "field": "Regions",
              "type": "nominal",
              "title": "Region",
              "scale": {
                "domain": ["Africa", "Americas", "Asia", "Europe", "MENA", "Oceania"],
                "range": ["#e41a1c", "#FF8C00", "#4B0082", "#1E90FF", "#FFD700", "#8B4513"]
              }
            },
            "opacity": {
              "condition": {
                "selection": "region_highlight",
                "value": 1
              },
              "value": 0.2
            },
            "tooltip": [
              {"field": "Regions", "type": "nominal", "title": "Region"},
              {"field": "Year", "type": "ordinal", "title": "Year"},
              {"field": "Average Income", "type": "quantitative", "title": "Average Income (USD)"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "Regions", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Year'] == 2022",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {"field": "Regions", "type": "nominal", "title": "Region"},
              {"field": "Year", "type": "ordinal", "title": "Year"},
              {"field": "Average Income", "type": "quantitative", "title": "Average Income (USD)"}
            ]
          }
        }
      ]
    },
    {
      "width": 500,
      "height": 60,
      "mark": "line",
      "title": "Brush to Filter by Year",
      "data": {
        "url": "../datasets/avg_income_world.csv",
        "format": {"type": "csv"}
      },
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Average Income",
          "type": "quantitative",
          "axis": {"title": "Average Income (USD)", "grid": false}
        }
      }
    }
  ]
}
