{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 500,
  "background": "transparent",
  "title": "Human Development Index (HDI) vs. Gini Coefficient Across Countries",
  "data": {
    "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/datasets/HDI_and_gini.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.HDI > 0"},
    {"filter": "datum.gini_coefficient > 0"},
    {"filter": "datum.Population > Population_Above"}
  ],
  "encoding": {
    "x": {
      "field": "HDI",
      "type": "quantitative",
      "title": "Human Development Index (HDI)"
    },
    "y": {
      "field": "gini_coefficient",
      "type": "quantitative",
      "title": "Gini Coefficient"
    }
  },
  "layer": [
    { 
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [30, 80, 160, 250, 480, 900]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "title": "Region (Click to Highlight)",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Asia",
              "Europe",
              "MENA",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#FF8C00",
              "#4B0082",
              "#1E90FF",
              "#FFD700",
              "#8B4513"
            ]
          }
        },
        "opacity": {
          "condition": {
            "selection": "region_highlight",
            "value": 0.55
          },
          "value": 0
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "HDI", "type": "quantitative", "format": ".2f"},
          {"field": "gini_coefficient", "type": "quantitative", "format": ".2f", "title": "Gini Coefficient"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
      "text": {"field": "country", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {"condition": {
          "test": "datum['country'] == 'Brazil' || datum['country'] == 'Norway' || datum['country'] == 'Chad'",
          "value": 1
          },
          "value": 0
          }
        }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/datasets/HDI_and_gini.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "filter": {
            "and": [
              { "field": "country", "equal": "Brazil" }
            ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -50,  
        "dy": -250, 
        "color": "black",
        "fontSize": 12
      },
      "encoding": {
        "text": {
          "value": ["Brazil, despite its mid-range HDI,", "has a high Gini coefficient, reflecting", "income disparity."]
        },
        "x": {"value": 160},
        "y": {"value": 280}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/datasets/HDI_and_gini.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "filter": {
            "and": [
              { "field": "country", "equal": "Brazil" }
            ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -50,  
        "dy": -220,  
        "color": "black",
        "fontSize": 12
      },
      "encoding": {
        "text": {
          "value": ["Chad, with a low HDI and high Gini,", "represents a country with significant", "income inequality."]
        },
        "x": {"value": 100},
        "y": {"value": 460}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lauyunxian/3179_as2/main/datasets/HDI_and_gini.csv",
        "format": { "type": "csv" }
      },
      "transform": [
        {
          "filter": {
            "and": [
              { "field": "country", "equal": "Brazil" }
            ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -50,  
        "dy": -250, 
        "color": "black",
        "fontSize": 12
      },
      "encoding": {
        "text": {
          "value": ["Norway, with one of the highest HDI scores,", "has a relatively low Gini coefficient,", "indicating a balanced income distribution."]
        },
        "x": {"value": 500},
        "y": {"value": 620}
      }
    }
  ]
}
