        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "filter": {"field": "properties.NAME", "oneOf": ["Luxembourg", "Burundi", "Malaysia"]}
        },
        {
          "calculate": "datum.properties.NAME",
          "as": "Country Name"
        },
        {
          "calculate": "datum.properties.NAME === 'Burundi' ? 29.9189 : datum.properties.NAME === 'Luxembourg' ? 6.1319 : datum.properties.NAME === 'Malaysia' ? 101.9758 : null",
          "as": "longitude"
        },
        {
          "calculate": "datum.properties.NAME === 'Burundi' ? -3.3731 : datum.properties.NAME === 'Luxembourg' ? 49.8153 : datum.properties.NAME === 'Malaysia' ? 4.2105 : null",
          "as": "latitude"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 1,
        "dy": -5,
        "fontSize": 12,
        "color": "black"
      },
      "encoding": {
        "longitude": {"field": "longitude"},
        "latitude": {"field": "latitude"},
        "text": {"field": "Country Name"}
