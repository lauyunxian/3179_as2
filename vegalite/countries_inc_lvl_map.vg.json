{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Income Level Distribution by Country",
  "width": 700,
  "height": 400,
  "background": "transparent",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "../map_data/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],

      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "../datasets/countries_income_level.csv"
            },
            "key": "Country Name",
            "fields": ["Country Income Level"]
          }
        }
      ],
      "selection": {
        "income_highlight": {
          "type": "multi",
          "fields": ["Country Income Level"],
          "bind": "legend"
        }
      },
      "encoding": {
        "color": {
          "field": "Country Income Level",
          "type": "nominal",
          "scale": {
            "domain": ["Low Income Country", "Lower Middle Income Country", "High Middle Income Country", "High Income Country"],
            "range": ["#fbe58d", "#f2c94c", "#f4a300", "#d85c31"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Country Income Level", "type": "nominal", "title": "Income Level"}
        ],
        "opacity": {
          "condition": {
            "selection": "income_highlight",
            "value": 1.0
          },
          "value": 0.2
        }
      }
    },
    {
      "data": {
        "url": "../map_data/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightblue"
      }
    },
    {
      "data": {
        "url": "../map_data/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    }
  ]
}
